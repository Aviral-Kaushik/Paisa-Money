<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:background="@drawable/card_bg"
    android:elevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <ImageView
            android:id="@+id/option_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_rate"
            android:contentDescription="@string/option_image"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/option_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate_5_star_amp_earn_money"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_regular"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toEndOf="@id/option_image"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/chances"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_chances"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="#FFBC36"
            android:fontFamily="@font/lato_regular"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toEndOf="@id/option_image"
            app:layout_constraintTop_toBottomOf="@id/option_title"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹10"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/lato_regular"
            android:background="@drawable/text_expandable_bg"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/price_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>