<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFBF4"
        android:orientation="vertical"
        android:id="@+id/refer_code_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refer Code"
            android:fontFamily="@font/inter"
            android:layout_gravity="center"
            android:textColor="@color/black_70"
            android:textSize="20sp"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/refer_code_bg"
            android:padding="12dp"
            android:textColorHint="@color/black_70"
            android:hint="Refer Code (optional)"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:maxLines="2"
            android:id="@+id/referrer_refer_code"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_regular"
            android:inputType="textCapSentences"
            android:layout_marginTop="35dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/register"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="@color/balance_background"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/continue_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Continue"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <ProgressBar
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:indeterminateTint="@color/white"
                        android:id="@+id/progress_bar"
                        android:visibility="gone" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </LinearLayout>
</layout>